extends layout

block content
  h1 #{title}

  form(method='POST')
    div.form-group
      label(for='name') username:
      input#name.form-control(type='text',  name='uname')
      br
      label(for='name') userpass:
      input#name.form-control(type='password',  name='upass')      
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg