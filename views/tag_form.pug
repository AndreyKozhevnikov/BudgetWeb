extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='input1') Name:
      input#input1.form-control(type='text', placeholder='Enter a new tag name' name='NameFromForm' value=(undefined===tagFromForm ? '' : tagFromForm.Name))

      label(for='input1') LocalId:
      input#input1.form-control(type='text',  name='LocalIdFromForm' value=(undefined===tagFromForm ? '' : tagFromForm.LocalId))
      label(for='input2') OrderNumber:
      input#input2.form-control(type='text',  name='OrderNumberFromForm' value=(undefined===tagFromForm ? '' : tagFromForm.OrderNumberFromForm))          
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg