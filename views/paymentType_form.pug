extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='input1') Name:
      input#input1.form-control(type='text', placeholder='Enter a new PaymentType name' name='fName' value=(undefined===tagFromForm ? '' : tagFromForm.Name))

    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg