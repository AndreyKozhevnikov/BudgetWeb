extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='input1') Name:
      input#input1.form-control(type='text', placeholder='Enter a new PaymentType name' name='fName')
      label(for='chIsYandex') IsYandex:
      input#chIsYandex.form-control(type='checkbox',  name='fIsYandex')

    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg