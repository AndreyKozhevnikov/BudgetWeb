extends layout

block content
  h1 #{title}
  form(method='POST' action='')
    div.form-group
      label(for='txName') Name:
      input#txName.form-control(type='text', placeholder='Enter a new tag name' name='NameFromForm' value=(undefined===accountFromForm ? '' : accountFromForm.Name))
      label(for='txBalance') Balance:
      input#txBalance.form-control(type='text', required='true'  name='BalanceFromForm' value=(undefined===accountFromForm ? '' : accountFromForm.Balance))
      label(for='txLocalId') LocalId:
      input#txLocalId.form-control(type='text', required='true'  name='LocalIdFromForm' value=(undefined===accountFromForm ? '' : accountFromForm.LocalId))
    button.btn.btn-primary(type='submit') Submit
  if errors 
    ul
      for error in errors
        li!= error.msg